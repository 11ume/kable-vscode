{
    "name": "custom-view-samples",
    "displayName": "Custom view Samples",
    "description": "Samples for VSCode's view API",
    "version": "0.0.1",
    "publisher": "vscode-samples",
    "enableProposedApi": true,
    "engines": {
        "vscode": "^1.39.0"
    },
    "activationEvents": [
        "onView:nodeViewer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "node-viewer",
                    "title": "Node viewer",
                    "icon": "assets/ext.svg"
                }
            ]
        },
        "views": {
            "node-viewer": [
                {
                    "id": "nodeViewer",
                    "name": ""
                }
            ]
        },
        "commands": [
            {
                "command": "extension.treeview.pin",
                "title": "Pin all",
                "category": "TreeView",
                "icon": {
                    "dark": "assets/pin.svg",
                    "light": "assets/pin.svg"
                }
            },
            {
                "command": "extension.treeview.unpin",
                "title": "Unpin all",
                "category": "TreeView",
                "icon": {
                    "dark": "assets/unpin.svg",
                    "light": "assets/unpin.svg"
                }
            },
            {
                "command": "extension.treeview.copyItemInfoToClipboard",
                "title": "Copy to clipboard",
                "icon": {
                    "dark": "assets/copy.svg",
                    "light": "assets/copy.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "extension.treeview.pin",
                    "group": "navigation",
                    "when": "view == nodeViewer"
                },
                {
                    "command": "extension.treeview.unpin",
                    "group": "navigation",
                    "when": "view == nodeViewer"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.treeview.copyItemInfoToClipboard",
                    "group": "inline",
                    "when": "view == nodeViewer && viewItem == nodeTree"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^13.5.2",
        "@types/vscode": "^1.41.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "clipboardy": "^2.1.0",
        "date-fns": "^2.9.0",
        "kable-core": "git+https://github.com/11ume/kable-core.git"
    }
}